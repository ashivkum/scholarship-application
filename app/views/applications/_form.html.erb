<%= form_for(@application) do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.radio_button :gender, 'Male' %>Male<br>
    <%= f.radio_button :gender, 'Female' %>Female
  </div>
  <div class="field">
    <%= f.label :date_of_birth %><br>
    <%= f.date_select :date_of_birth, :start_year => 1940, :end_year => 2016 %>
  </div>
  <div class="field">
    <%= f.label :gpa, 'GPA' %><br>
    <%= f.select :gpa, ['1.0-2.5', '2.5-3.0', '3.0-3.5', '3.5-4.0', '4.0 and Above']%>
  </div>
  <div class="field">
    <%= f.label :essay %><br>
    <%= f.text_area :essay, :class => "essay-form" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
